#!/bin/bash

if [ "`uname`" != "Linux" ]; then
    echo "$0 installs the native project dependencies on a debian machine"
    exit
fi

sudo aptitude install xvfb openssh-client libopenssl-ruby sqlite3 ruby1.8-dev libsqlite3-dev libxml2-dev libxslt-dev

# svn checkout http://closure-library.googlecode.com/svn/trunk/ lib/closure-library
